import java.util.Scanner;

public class CheckTheNumberIsIncreasingNumber {

	public static void main(String[] args) {
		 CheckTheNumberIsIncreasingNumber I = new CheckTheNumberIsIncreasingNumber();
         Scanner sc = new Scanner(System.in);
         System.out.println("Enter a number:");
         int num = sc.nextInt();
         System.out.println("increasing number: "+I.checkNumber(num));
  }

		       public boolean checkNumber(int num)
		       {
		              boolean flag=false;
		              String str = String.valueOf(num);
		              int l = str.length();
		              for(int i=0;i<l-1;i++)
		              {
		            	  
		               
		            	 if(str.charAt(i)<=str.charAt(i+1) )
		                           flag=true;
		                 else
		                           flag=false;
		              }
		              return flag;

	}

}
